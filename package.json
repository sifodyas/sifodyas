{
  "name": "sifodyas",
  "version": "3.0.0",
  "description": "Bring the famous bundle / kernel logic to Javascript",
  "scripts": {
    "lint": "tslint --project tsconfig.json -c tslint.json '{core,lib}/**/src/**/*.ts*'",
    "lint:test": "tslint --project test/tsconfig.json -c tslint.json 'test/**/*.ts*'",
    "lint:fix": "yarn lint --fix && yarn lint:test --fix",
    "w": "yarn workspace",
    "ws": "yarn workspaces",
    "build:core": "yarn w @sifodyas/sifodyas build",
    "build:other": "lerna exec --stream --parallel \"yarn rimraf dist/* && TS_NODE_PROJECT=\"\\$LERNA_ROOT_PATH/scripts/tsconfig.json\" yarn webpack --display-error-details --config \\$LERNA_ROOT_PATH/scripts/webpack-other.config.ts\"",
    "build": "yarn build:core && yarn build:other",
    "pub": "lerna exec -- yarn publish --non-interactive",
    "doc": "typedoc --out docs/dist --inputFiles core/src/ --inputFiles lib/ --mode file --includeVersion --readme none --theme minimal --hideGenerator --name Sifodyas"
  },
  "private": true,
  "workspaces": [
    "core",
    "lib/bundles/*",
    "lib/plugins/*"
  ],
  "devDependencies": {
    "@types/circular-dependency-plugin": "^5.0.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.1",
    "@types/semver": "^6.0.2",
    "@types/webpack": "^4.4.12",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/yamljs": "^0.2.30",
    "@wynd/tslint-config-wynd": "^2.0.0",
    "circular-dependency-plugin": "^5.0.2",
    "fork-ts-checker-webpack-plugin": "^3.0.0",
    "glob": "^7.1.4",
    "jest": "^24.5.0",
    "lerna": "^3.19.0",
    "rimraf": "^3.0.0",
    "semver": "^6.0.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.0.1",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.6.0",
    "tslib": "^1.10.0",
    "tslint": "^5.12.0",
    "tslint-loader": "^3.6.0",
    "typedoc": "^0.16.10",
    "typescript": "^3.7.2",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
